{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "module": "es2015",
    "rootDir": "app",
    "baseUrl": "./",
    "moduleResolution": "node"
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.vue"
  ]
}
